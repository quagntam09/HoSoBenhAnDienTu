@model IEnumerable<HoSoBenhAnDienTu.Models.NhatKySucKhoe>
@{
    ViewBag.Title = "Nhật ký bệnh nhân";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var benhNhan = ViewBag.BenhNhan as HoSoBenhAnDienTu.Models.HoSoNguoiDung;
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h5 class="text-muted mb-1">Theo dõi sức khỏe hàng ngày của</h5>
            <h2 class="text-primary fw-bold">@benhNhan.HoTen <small class="fs-5 text-muted">(Mã HS: @benhNhan.MaHoSo)</small></h2>
        </div>
        <div>
            <a href="@Url.Action("DanhSachBenhNhan", "BacSi")" class="btn btn-outline-secondary me-2">
                <i class="fas fa-list me-1"></i> Danh sách
            </a>
            <a href="@Url.Action("KhamBenh", "BacSi", new { id = benhNhan.MaHoSo })" class="btn btn-danger">
                <i class="fas fa-stethoscope me-1"></i> Khám bệnh
            </a>
        </div>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-header bg-white border-bottom-0 pt-3">
            <h5 class="fw-bold text-info"><i class="fas fa-book-medical me-2"></i>Dữ liệu Nhật ký</h5>
        </div>
        <div class="card-body p-0">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover table-striped mb-0">
                        <thead class="bg-light">
                            <tr>
                                <th class="ps-4" style="width: 20%;">Thời gian ghi</th>
                                <th style="width: 50%;">Triệu chứng / Ghi chú</th>
                                <th style="width: 30%;">Chỉ số tự đo</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="ps-4 fw-bold text-nowrap">
                                        @item.NgayGhi.Value.ToString("dd/MM/yyyy HH:mm")
                                    </td>
                                    <td>
                                        @item.TrieuChung
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.ChiSoTuDo))
                                        {
                                            <span class="badge bg-warning text-dark fs-6 font-weight-normal">
                                                @item.ChiSoTuDo
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted small">--</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <img src="https://cdn-icons-png.flaticon.com/512/2965/2965302.png" width="80" class="mb-3 opacity-50">
                    <p class="text-muted fs-5">Bệnh nhân chưa ghi nhật ký sức khỏe nào.</p>
                </div>
            }
        </div>
    </div>
</div>