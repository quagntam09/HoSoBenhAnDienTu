@model IEnumerable<HoSoBenhAnDienTu.Models.HoSoNguoiDung>

@{
    ViewBag.Title = "Danh sách Bệnh nhân";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid" style="padding-top: 20px;">
    <div class="row">
        <div class="col-md-6">
            <h2 class="text-primary" style="margin-top:0"><i class="glyphicon glyphicon-list-alt"></i> Danh sách Bệnh nhân</h2>
        </div>

        <div class="col-md-6 text-right">
            <form action="/BacSi/DanhSachBenhNhan" method="get" class="form-inline">
                <div class="form-group">
                    <input type="text" name="searchString" class="form-control" placeholder="Nhập tên hoặc mã hồ sơ..." value="@Request.QueryString["searchString"]" style="width: 300px;" />
                </div>
                <button type="submit" class="btn btn-primary"><i class="glyphicon glyphicon-search"></i> Tìm kiếm</button>
            </form>
        </div>
    </div>
    <hr />

    <div class="panel panel-default">
        <div class="panel-heading">Tổng số hồ sơ: <strong>@Model.Count()</strong></div>
        <div class="table-responsive">
            <table class="table table-striped table-hover table-bordered">
                <thead>
                    <tr class="bg-info">
                        <th class="text-center" style="width: 80px;">Mã HS</th>
                        <th>Họ và Tên</th>
                        <th class="text-center">Năm sinh</th>
                        <th class="text-center">Giới tính</th>
                        <th class="text-center">Nhóm máu</th>
                        <th>SĐT Liên hệ</th>
                        <th>Lần khám gần nhất</th>
                        <th class="text-center" style="width: 100px;">Lịch sử</th>
                        <th class="text-center" style="width: 100px;">Khám mới</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="9" class="text-center text-danger" style="padding: 20px;">
                                <strong>Không tìm thấy bệnh nhân nào phù hợp.</strong>
                            </td>
                        </tr>
                    }
                    else
                    {
                        foreach (var item in Model)
                        {
                            var lanKhamCuoi = item.LanKham.OrderByDescending(x => x.NgayKham).FirstOrDefault();
                            string ngayKhamText = lanKhamCuoi != null ? lanKhamCuoi.NgayKham.ToString("dd/MM/yyyy") : "Chưa khám lần nào";
                            string classTrangThai = lanKhamCuoi != null ? "text-success" : "text-muted";

                            <tr>
                                <td class="text-center"><strong>@item.MaHoSo</strong></td>
                                <td style="font-weight:bold; color: #2c3e50;">@item.HoTen</td>
                                <td class="text-center">@(item.NgaySinh.HasValue ? item.NgaySinh.Value.Year.ToString() : "--")</td>
                                <td class="text-center">@item.GioiTinh</td>
                                <td class="text-center"><span class="label label-warning">@item.NhomMau</span></td>
                                <td>@item.SoDienThoaiLienHe</td>
                                <td class="@classTrangThai">
                                    <i class="glyphicon glyphicon-calendar"></i> @ngayKhamText
                                </td>

                                <td class="text-center">
                                    <a href="@Url.Action("TheoDoiSucKhoe", "BacSi", new { id = item.MaHoSo })" class="btn btn-info btn-sm" title="Xem biểu đồ sức khỏe">
                                        <i class="glyphicon glyphicon-stats"></i> Theo dõi
                                    </a>
                                </td>

                                <td class="text-center">
                                    <a href="@Url.Action("KhamBenh", "BacSi", new { id = item.MaHoSo })" class="btn btn-danger btn-sm" title="Khám bệnh mới">
                                        <i class="fas fa-stethoscope"></i> Khám
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>