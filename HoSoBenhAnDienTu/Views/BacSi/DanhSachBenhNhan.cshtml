@model IEnumerable<HoSoBenhAnDienTu.Models.HoSoNguoiDung>

@{
    ViewBag.Title = "Danh sách Bệnh nhân";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid" style="padding-top: 20px;">
    <div class="row">
        <div class="col-md-4">
            <h2 class="text-primary" style="margin-top:0"><i class="fas fa-users-medical"></i> Danh sách Bệnh nhân</h2>
        </div>

        <div class="col-md-8 text-right">
            @using (Html.BeginForm("DanhSachBenhNhan", "BacSi", FormMethod.Get, new { @class = "form-inline justify-content-end" }))
            {
                <div class="form-group mr-2">
                    <select name="filterGender" class="form-control">
                        <option value="">-- Tất cả giới tính --</option>
                        <option value="Nam" @(ViewBag.CurrentGender == "Nam" ? "selected" : "")>Nam</option>
                        <option value="Nữ" @(ViewBag.CurrentGender == "Nữ" ? "selected" : "")>Nữ</option>
                        <option value="Khác" @(ViewBag.CurrentGender == "Khác" ? "selected" : "")>Khác</option>
                    </select>
                </div>
                <div class="form-group mr-2">
                    <input type="text" name="searchString" class="form-control" placeholder="Tên hoặc Mã hồ sơ..." value="@ViewBag.CurrentFilter" style="width: 250px;" />
                </div>
                <button type="submit" class="btn btn-primary"><i class="fas fa-search"></i> Tìm & Lọc</button>
                <a href="@Url.Action("DanhSachBenhNhan", "BacSi")" class="btn btn-default ml-1" title="Xóa bộ lọc"><i class="fas fa-sync-alt"></i></a>
            }
        </div>
    </div>
    <hr />

    <div class="panel panel-default shadow-sm">
        <div class="panel-heading d-flex justify-content-between">
            <span>Tổng số hồ sơ: <strong>@Model.Count()</strong></span>
            <span class="text-muted small fst-italic">Bấm vào tiêu đề cột để sắp xếp</span>
        </div>
        <div class="table-responsive">
            <table class="table table-striped table-hover table-bordered mb-0">
                <thead class="bg-info text-white">
                    <tr>
                        <th class="text-center" style="width: 80px;">Mã HS</th>

                        <th>
                            @Html.ActionLink("Họ và Tên", "DanhSachBenhNhan", new { sortOrder = ViewBag.NameSortParm, searchString = ViewBag.CurrentFilter, filterGender = ViewBag.CurrentGender }, new { @class = "text-white text-decoration-none" })
                            @if (ViewBag.CurrentSort == "name_desc")
                            {<i class="fas fa-sort-alpha-down-alt float-right"></i> }
                            else
                            { <i class="fas fa-sort-alpha-down float-right opacity-50"></i>}
                        </th>

                        <th class="text-center">
                            @Html.ActionLink("Năm sinh", "DanhSachBenhNhan", new { sortOrder = ViewBag.AgeSortParm, searchString = ViewBag.CurrentFilter, filterGender = ViewBag.CurrentGender }, new { @class = "text-white text-decoration-none" })
                            @if (ViewBag.CurrentSort == "Age")
                            {<i class="fas fa-sort-numeric-down float-right"></i> }
                            else
                            { <i class="fas fa-sort float-right opacity-50"></i>}
                        </th>

                        <th class="text-center">Giới tính</th>
                        <th class="text-center">Nhóm máu</th>
                        <th>SĐT Liên hệ</th>

                        <th>
                            @Html.ActionLink("Lần khám gần nhất", "DanhSachBenhNhan", new { sortOrder = ViewBag.DateSortParm, searchString = ViewBag.CurrentFilter, filterGender = ViewBag.CurrentGender }, new { @class = "text-white text-decoration-none" })
                            @if (ViewBag.CurrentSort == "date_desc")
                            {<i class="fas fa-sort-amount-down float-right"></i> }
                            else
                            { <i class="fas fa-sort float-right opacity-50"></i>}
                        </th>

                        <th class="text-center" style="width: 180px;">Tra cứu Hồ sơ</th>
                        <th class="text-center" style="width: 100px;">Tác vụ</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="9" class="text-center text-danger py-4">
                                <i class="fas fa-search-minus fa-2x mb-2"></i><br />
                                <strong>Không tìm thấy bệnh nhân nào phù hợp với bộ lọc.</strong>
                            </td>
                        </tr>
                    }
                    else
                    {
                        foreach (var item in Model)
                        {
                            var lanKhamCuoi = item.LanKham.OrderByDescending(x => x.NgayKham).FirstOrDefault();
                            string ngayKhamText = lanKhamCuoi != null ? lanKhamCuoi.NgayKham.ToString("dd/MM/yyyy") : "Chưa khám";
                            string classTrangThai = lanKhamCuoi != null ? "text-success fw-bold" : "text-muted small";

                            <tr>
                                <td class="text-center fw-bold">@item.MaHoSo</td>
                                <td style="font-weight:600; color: #2c3e50;">@item.HoTen</td>
                                <td class="text-center">@(item.NgaySinh.HasValue ? item.NgaySinh.Value.Year.ToString() : "--")</td>
                                <td class="text-center">@item.GioiTinh</td>
                                <td class="text-center"><span class="badge bg-warning text-dark">@item.NhomMau</span></td>
                                <td>@item.SoDienThoaiLienHe</td>
                                <td class="@classTrangThai">
                                    <i class="far fa-calendar-alt"></i> @ngayKhamText
                                </td>

                                <td class="text-center">
                                    <div class="btn-group btn-group-sm">
                                        <a href="@Url.Action("LichSuKhamBenh", "BacSi", new { id = item.MaHoSo })" class="btn btn-outline-secondary" title="Xem lịch sử">
                                            <i class="fas fa-history"></i>
                                        </a>
                                        <a href="@Url.Action("TheoDoiSucKhoe", "BacSi", new { id = item.MaHoSo })" class="btn btn-outline-info" title="Xem biểu đồ">
                                            <i class="fas fa-chart-line"></i>
                                        </a>
                                        <a href="@Url.Action("XemNhatKy", "BacSi", new { id = item.MaHoSo })" class="btn btn-outline-info" title="Xem nhật ký sức khỏe">
                                            <i class="fas fa-chart-line"></i> Nhật ký
                                        </a>
                                    </div>
                                </td>

                                <td class="text-center">
                                    <a href="@Url.Action("KhamBenh", "BacSi", new { id = item.MaHoSo })" class="btn btn-danger btn-sm" title="Khám bệnh mới">
                                        <i class="fas fa-stethoscope"></i> Khám
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>