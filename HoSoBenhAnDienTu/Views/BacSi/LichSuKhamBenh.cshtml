@model IEnumerable<HoSoBenhAnDienTu.Models.LanKham>
@{
    ViewBag.Title = "Lịch sử khám bệnh";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var benhNhan = ViewBag.BenhNhan as HoSoBenhAnDienTu.Models.HoSoNguoiDung;
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h4 class="mb-0 text-muted">Lịch sử khám bệnh của</h4>
            <h2 class="fw-bold text-primary">@benhNhan.HoTen</h2>
            <span class="badge bg-info text-dark">Mã HS: @benhNhan.MaHoSo</span>
        </div>
        <div>
            <a href="@Url.Action("KhamBenh", "BacSi", new { id = benhNhan.MaHoSo })" class="btn btn-success">
                <i class="fas fa-stethoscope me-2"></i>Khám mới
            </a>
            <a href="@Url.Action("DanhSachBenhNhan", "BacSi")" class="btn btn-outline-secondary ms-2">
                <i class="fas fa-arrow-left me-2"></i>Danh sách BN
            </a>
        </div>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="bg-light text-primary">
                            <tr>
                                <th class="ps-4">Ngày khám</th>
                                <th>Nơi khám</th>
                                <th>Chẩn đoán chính</th>
                                <th>Bác sĩ</th>
                                <th class="text-center">Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="ps-4 fw-bold">@item.NgayKham.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>@item.NoiKham</td>
                                    <td class="text-danger fw-bold">@item.ChanDoanChinh</td>
                                    <td>@item.BacSiKham</td>
                                    <td class="text-center">
                                        <a href="@Url.Action("ChiTietLanKham", "BacSi", new { id = item.MaLanKham })" class="btn btn-sm btn-outline-primary rounded-pill px-3">
                                            Xem chi tiết <i class="fas fa-arrow-right ms-1"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <img src="https://cdn-icons-png.flaticon.com/512/7486/7486831.png" width="100" class="mb-3 opacity-50" />
                    <p class="text-muted fs-5">Bệnh nhân này chưa có lịch sử khám bệnh nào.</p>
                </div>
            }
        </div>
    </div>
</div>