@model IEnumerable<HoSoBenhAnDienTu.Models.View_TongHopLichSuKham>

@{
    ViewBag.Title = "Lịch sử Khám chữa bệnh";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary fw-bold"><i class="fas fa-history me-2"></i>Lịch sử Khám bệnh</h2>
        <a href="@Url.Action("HoSoCaNhan", "BenhNhan")" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>Quay lại Hồ sơ
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-warning text-center p-5 shadow-sm border-0">
            <div class="fs-1 mb-3 text-warning"><i class="fas fa-folder-open"></i></div>
            <h4>Chưa có dữ liệu khám bệnh</h4>
            <p>Bạn chưa có lịch sử khám bệnh nào được ghi nhận trên hệ thống.</p>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var item in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm border-0 hover-effect">
                        <div class="card-header bg-white border-bottom-0 pt-3 pb-0 d-flex justify-content-between">
                            <span class="badge bg-primary rounded-pill px-3 py-2">
                                <i class="far fa-calendar-alt me-1"></i> @item.NgayKham.ToString("dd/MM/yyyy")
                            </span>
                            @if (item.TrangThai == "Sắp tái khám")
                            {
                                <span class="badge bg-warning text-dark"><i class="fas fa-clock me-1"></i> Sắp tái khám</span>
                            }
                            else
                            {
                                <span class="badge bg-success"><i class="fas fa-check me-1"></i> Hoàn thành</span>
                            }
                        </div>
                        <div class="card-body">
                            <h5 class="card-title text-primary fw-bold mb-3">@item.NoiKham</h5>
                            <p class="card-text mb-2">
                                <i class="fas fa-user-md me-2 text-muted" style="width:20px"></i>
                                <strong>Chẩn đoán:</strong> <span class="text-danger">@item.ChanDoanChinh</span>
                            </p>
                            @if (item.NgayTaiKham.HasValue)
                            {
                                <p class="card-text mb-2 text-muted small">
                                    <i class="fas fa-redo me-2" style="width:20px"></i>
                                    Hẹn tái khám: <strong>@item.NgayTaiKham.Value.ToString("dd/MM/yyyy")</strong>
                                </p>
                            }
                        </div>
                        <div class="card-footer bg-white border-top-0 pb-3">
                            <a href="@Url.Action("ChiTietLanKham", "BenhNhan", new { id = item.MaLanKham })" class="btn btn-outline-primary w-100">
                                <i class="fas fa-info-circle me-1"></i> Xem chi tiết
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
    .hover-effect {
        transition: transform 0.2s, box-shadow 0.2s;
    }

        .hover-effect:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
        }
</style>