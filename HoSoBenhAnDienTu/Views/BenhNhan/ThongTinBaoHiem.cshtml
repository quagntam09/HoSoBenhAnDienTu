@model IEnumerable<HoSoBenhAnDienTu.Models.TheBaoHiem>
@{ ViewBag.Title = "Ví Bảo Hiểm"; Layout = "~/Views/Shared/_Layout.cshtml"; }

<style>
    .insurance-card {
        background: linear-gradient(135deg, #0061f2 0%, #00ba94 100%);
        color: white;
        border-radius: 15px;
        padding: 20px;
        box-shadow: 0 10px 20px rgba(0,0,0,0.19), 0 6px 6px rgba(0,0,0,0.23);
        position: relative;
        overflow: hidden;
        min-height: 200px;
    }

    .card-type {
        text-transform: uppercase;
        letter-spacing: 2px;
        font-size: 0.8em;
        opacity: 0.8;
    }

    .card-number {
        font-size: 1.5em;
        letter-spacing: 3px;
        font-family: 'Courier New', Courier, monospace;
        margin: 15px 0;
        text-shadow: 1px 1px 2px rgba(0,0,0,0.3);
    }

    .card-label {
        font-size: 0.7em;
        opacity: 0.7;
        margin-bottom: 2px;
    }

    .card-value {
        font-size: 0.9em;
        font-weight: bold;
    }

    .chip {
        width: 50px;
        height: 35px;
        background: #ffd700;
        border-radius: 5px;
        margin-bottom: 10px;
        background: linear-gradient(135deg, #ffd700 0%, #fdb931 100%);
    }
</style>

<div class="container py-4">
    <h2 class="text-primary mb-4"><i class="fas fa-wallet me-2"></i>Ví Bảo Hiểm Điện Tử</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-warning">Bạn chưa cập nhật thông tin thẻ bảo hiểm nào.</div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var item in Model)
            {
                <div class="col-md-6 col-lg-6">
                    <div class="insurance-card">
                        <div class="d-flex justify-content-between">
                            <div class="chip"></div>
                            <div class="card-type">@item.LoaiBaoHiem</div>
                        </div>
                        <div class="card-number">@item.SoThe</div>
                        <div class="row mt-3">
                            <div class="col-6">
                                <div class="card-label">NƠI ĐK KCB BAN ĐẦU</div>
                                <div class="card-value">@item.NoiDangKyKhamBanDau</div>
                            </div>
                            <div class="col-6 text-end">
                                <div class="card-label">HẠN SỬ DỤNG</div>
                                <div class="card-value">@(item.NgayHetHan.HasValue ? item.NgayHetHan.Value.ToString("dd/MM/yyyy") : "Vô thời hạn")</div>
                            </div>
                        </div>
                    </div>
                    @if (!string.IsNullOrEmpty(item.AnhChupThe))
                    {
                        <div class="mt-2 text-center">
                            <button type="button" class="btn btn-sm btn-outline-primary" data-bs-toggle="modal" data-bs-target="#modal-@item.MaThe">
                                <i class="fas fa-image"></i> Xem ảnh thẻ gốc
                            </button>
                        </div>
                        <div class="modal fade" id="modal-@item.MaThe" tabindex="-1">
                            <div class="modal-dialog modal-lg">
                                <div class="modal-content">
                                    <div class="modal-body text-center">
                                        <img src="@item.AnhChupThe" class="img-fluid" alt="Ảnh thẻ BHYT" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    }
</div>