@model IEnumerable<HoSoBenhAnDienTu.Models.TheBaoHiem>
@{
    ViewBag.Title = "Ví Bảo Hiểm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .insurance-card {
        background: linear-gradient(135deg, #0061f2 0%, #00ba94 100%);
        color: white;
        border-radius: 15px;
        padding: 20px;
        box-shadow: 0 10px 20px rgba(0,0,0,0.19), 0 6px 6px rgba(0,0,0,0.23);
        position: relative;
        overflow: hidden;
        min-height: 200px;
        transition: transform 0.3s;
    }

        .insurance-card:hover {
            transform: translateY(-5px);
        }

    .card-type {
        text-transform: uppercase;
        letter-spacing: 2px;
        font-size: 0.8em;
        opacity: 0.8;
    }

    .card-number {
        font-size: 1.5em;
        letter-spacing: 3px;
        font-family: 'Courier New', Courier, monospace;
        margin: 15px 0;
        text-shadow: 1px 1px 2px rgba(0,0,0,0.3);
    }

    .card-label {
        font-size: 0.7em;
        opacity: 0.7;
        margin-bottom: 2px;
    }

    .card-value {
        font-size: 0.9em;
        font-weight: bold;
    }

    .chip {
        width: 50px;
        height: 35px;
        border-radius: 5px;
        margin-bottom: 10px;
        background: linear-gradient(135deg, #ffd700 0%, #fdb931 100%);
    }

    .btn-add-card {
        border-radius: 50px;
        padding: 8px 20px;
        font-weight: bold;
    }
</style>

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary m-0"><i class="fas fa-wallet me-2"></i>Ví Bảo Hiểm Điện Tử</h2>
        <button type="button" class="btn btn-primary btn-add-card shadow-sm" data-bs-toggle="modal" data-bs-target="#addCardModal">
            <i class="fas fa-plus-circle me-2"></i>Thêm thẻ mới
        </button>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="text-center py-5 bg-light rounded border border-dashed">
            <i class="fas fa-id-card fa-3x text-muted mb-3"></i>
            <p class="text-muted">Bạn chưa lưu thẻ bảo hiểm nào.</p>
            <button class="btn btn-sm btn-outline-primary" data-bs-toggle="modal" data-bs-target="#addCardModal">Thêm ngay</button>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var item in Model)
            {
                <div class="col-md-6 col-lg-6">
                    <div class="insurance-card">
                        <div class="d-flex justify-content-between">
                            <div class="chip"></div>
                            <div class="card-type">@item.LoaiBaoHiem</div>
                        </div>
                        <div class="card-number">@item.SoThe</div>
                        <div class="row mt-3">
                            <div class="col-7">
                                <div class="card-label">NƠI ĐK KCB BAN ĐẦU</div>
                                <div class="card-value text-truncate">@item.NoiDangKyKhamBanDau</div>
                            </div>
                            <div class="col-5 text-end">
                                <div class="card-label">HẠN SỬ DỤNG</div>
                                <div class="card-value">
                                    @(item.NgayHetHan.HasValue ? item.NgayHetHan.Value.ToString("dd/MM/yyyy") : "Vô thời hạn")
                                </div>
                            </div>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(item.AnhChupThe))
                    {
                        <div class="mt-2 text-end">
                            <small>
                                <a href="#" data-bs-toggle="modal" data-bs-target="#modal-img-@item.MaThe" class="text-decoration-none">
                                    <i class="fas fa-image me-1"></i>Xem ảnh gốc
                                </a>
                            </small>
                        </div>
                        <div class="modal fade" id="modal-img-@item.MaThe" tabindex="-1">
                            <div class="modal-dialog modal-lg">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title">Ảnh thẻ BHYT: @item.SoThe</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                    </div>
                                    <div class="modal-body text-center">
                                        <img src="@item.AnhChupThe" class="img-fluid rounded" alt="Ảnh thẻ" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    }
</div>

<div class="modal fade" id="addCardModal" tabindex="-1" aria-labelledby="addCardLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="addCardLabel"><i class="fas fa-plus-circle me-2"></i>Thêm Thẻ Bảo Hiểm</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            @using (Html.BeginForm("ThemMoiBaoHiem", "BenhNhan", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Loại Bảo Hiểm</label>
                        <select name="LoaiBaoHiem" class="form-select">
                            <option value="Bảo Hiểm Y Tế (BHYT)">Bảo Hiểm Y Tế (BHYT)</option>
                            <option value="Bảo Hiểm Nhân Thọ">Bảo Hiểm Nhân Thọ</option>
                            <option value="Bảo Hiểm Sức Khỏe">Bảo Hiểm Sức Khỏe (PVI, Bảo Việt...)</option>
                            <option value="Khác">Khác</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Số Thẻ <span class="text-danger">*</span></label>
                        <input type="text" name="SoThe" class="form-control" placeholder="Nhập mã số trên thẻ..." required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Nơi ĐK KCB Ban Đầu</label>
                        <input type="text" name="NoiDangKyKhamBanDau" class="form-control" placeholder="VD: Bệnh viện Đa khoa Tỉnh..." />
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Ngày Hết Hạn</label>
                        <input type="date" name="NgayHetHan" class="form-control" />
                        <small class="text-muted">Để trống nếu là thẻ vô thời hạn</small>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-primary">Lưu thẻ</button>
                </div>
            }
        </div>
    </div>
</div>