@model IEnumerable<HoSoBenhAnDienTu.Models.View_LichSuDungThuoc>
@{ ViewBag.Title = "Tủ thuốc cá nhân"; Layout = "~/Views/Shared/_Layout.cshtml"; }

<div class="container py-4">
    <h2 class="text-success mb-4"><i class="fas fa-pills me-2"></i>Tủ thuốc Cá nhân</h2>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light text-success">
                        <tr>
                            <th class="ps-4">Tên thuốc / Hoạt chất</th>
                            <th>Hàm lượng</th>
                            <th class="text-center">Tổng số đã dùng</th>
                            <th class="text-center">Số lần được kê</th>
                            <th class="text-end pe-4">Lần dùng gần nhất</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4 fw-bold text-dark">@item.TenThuoc</td>
                                <td class="text-muted">@item.HamLuong</td>
                                <td class="text-center"><span class="badge bg-secondary">@item.TongSoLuongDaDung</span></td>
                                <td class="text-center fw-bold">@item.SoLanDuocKeDon</td>
                                <td class="text-end pe-4 text-muted">
                                    @(item.LanDungGanNhat.HasValue ? item.LanDungGanNhat.Value.ToString("dd/MM/yyyy") : "")
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>