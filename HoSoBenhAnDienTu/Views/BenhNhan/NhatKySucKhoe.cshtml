@model IEnumerable<HoSoBenhAnDienTu.Models.NhatKySucKhoe>
@{
    ViewBag.Title = "Nhật ký sức khỏe";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row g-4">
        <div class="col-lg-4">
            <div class="card shadow-sm border-0 sticky-top" style="top: 20px; z-index: 1;">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0 fw-bold"><i class="fas fa-pen-fancy me-2"></i>Ghi nhật ký hôm nay</h5>
                </div>
                <div class="card-body">
                    <form action="@Url.Action("GhiNhatKy", "BenhNhan")" method="post">
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label class="form-label fw-bold text-muted">Triệu chứng / Cảm thấy thế nào?</label>
                            <textarea name="trieuChung" class="form-control" rows="4" placeholder="Ví dụ: Đau đầu nhẹ, ăn uống bình thường, ngủ ngon..." required></textarea>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold text-muted">Chỉ số tự đo (nếu có)</label>
                            <input type="text" name="chiSoTuDo" class="form-control" placeholder="Ví dụ: Huyết áp 120/80, Đường huyết 6.5...">
                            <small class="text-muted fst-italic">Nhập nhanh các chỉ số bạn tự đo tại nhà.</small>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary fw-bold">
                                <i class="fas fa-save me-2"></i>Lưu nhật ký
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-8">
            <h4 class="fw-bold text-primary mb-3"><i class="fas fa-history me-2"></i>Lịch sử Ghi chép</h4>

            @if (Model != null && Model.Any())
            {
                <div class="timeline">
                    @foreach (var item in Model)
                    {
                        <div class="card shadow-sm border-0 mb-3">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <h5 class="fw-bold text-dark mb-0">
                                        <i class="far fa-clock text-info me-2"></i>@item.NgayGhi.Value.ToString("dd/MM/yyyy HH:mm")
                                    </h5>
                                    <span class="badge bg-light text-dark border">
                                        @((DateTime.Now - item.NgayGhi.Value).Days) ngày trước
                                    </span>
                                </div>

                                <div class="bg-light p-3 rounded mb-2">
                                    <strong class="text-danger"><i class="fas fa-notes-medical me-2"></i>Triệu chứng:</strong>
                                    <p class="mb-0 mt-1">@item.TrieuChung</p>
                                </div>

                                @if (!string.IsNullOrEmpty(item.ChiSoTuDo))
                                {
                                    <div class="alert alert-info mb-0 py-2">
                                        <i class="fas fa-heartbeat me-2"></i><strong>Chỉ số đo:</strong> @item.ChiSoTuDo
                                    </div>
                                }
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center py-5 text-muted">
                    <i class="fas fa-book-open fa-3x mb-3 opacity-25"></i>
                    <p>Bạn chưa có ghi chép nào. Hãy bắt đầu ghi lại sức khỏe của mình ngay hôm nay!</p>
                </div>
            }
        </div>
    </div>
</div>